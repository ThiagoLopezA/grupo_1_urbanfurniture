<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {route:'forms.css', main:'main.css',
  title:'Iniciar sesión'})%>

  <body>
    <%- include('../partials/navbar_forms') %>

    <!-- Inicio del Main-->
    <main class="main-login">
      <div class="login-container">
        <i class="fa-solid fa-circle-user user-icon"></i>
        <form action="/login" method="POST" class="login-form">
          <h3 class="login-title">Bienvenido</h3>
          <div class="input-wrapper">
            <input
              type="text"
              name="user"
              class="login-input"
              placeholder="Nombre de usuario"
            /><i class="fa-solid fa-user input-icon"></i>
          </div>
          <div class="input-wrapper">
            <input
              type="password"
              name="password"
              class="login-input"
              placeholder="Contraseña"
            /><i class="fa-solid fa-lock input-icon"></i>
          </div>
          <input
            type="checkbox"
            class="form-check-input"
            name="remember-user"
          /><label class="label-remember-user">Recordarme</label>

          <div class="ingresar">
            <button class="login-button" type="submit">Ingresar</button>

            <a href="#"
              ><p class="recover-pass">¿Has olvidado tu contraseña?</p></a
            >
            <a href="/users/register"><p class="recover-pass">Registrate</p></a>
          </div>
        </form>
      </div>
    </main>
    <!-- Fin del Main-->

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
