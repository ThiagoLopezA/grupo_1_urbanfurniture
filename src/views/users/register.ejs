<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <title>Urban Furniture</title>
    <!-- css -->
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/forms.css" />
    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/143040bb16.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/navbar_forms') %>

    <!-- Inicio del Main-->
    <main class="main-login">
      <div class="login-container">
        <i class="fa-solid fa-circle-question user-icon"></i>
        <form action="/login" method="POST" class="login-form">
          <h3 class="login-title">Registrate</h3>
          <div class="input-wrapper">
            <input
              type="text"
              name="user"
              class="login-input"
              placeholder="Nombre de usuario"
            /><i class="fa-solid fa-user input-icon"></i>
          </div>
          <div class="input-wrapper">
            <input
              type="email"
              name="user-email"
              class="login-input"
              placeholder="Correo electrónico"
            /><i class="fa-solid fa-user input-icon"></i>
          </div>
          <div class="input-wrapper">
            <input
              type="password"
              name="password"
              class="login-input"
              placeholder="Contraseña"
            /><i class="fa-solid fa-lock input-icon"></i>
          </div>
          <div class="input-wrapper">
            <input
              type="password"
              name="password-confirm"
              class="login-input"
              placeholder="Confirmar contraseña"
            /><i class="fa-solid fa-lock input-icon"></i>
          </div>

          <div class="ingresar">
            <button class="login-button" type="submit">Registrarme</button>
            <p class="recover-pass">Registrarme con</p>
            <div class="links-login">
              <a href="#"><i class="fa-brands fa-google"></i></a>
              <a href="#"><i class="fa-brands fa-facebook"></i></a>
            </div>
          </div>
        </form>
      </div>
    </main>
    <!-- Fin del Main-->

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
